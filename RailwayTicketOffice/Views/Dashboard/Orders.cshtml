@model List<OrderModel>

@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}

<h2>My orders</h2>

@if (Model.Count == 0)
{
    <div>
        <h2 class="text-center align-middle">Your order list is empty.</h2>
        <h2 class="text-center align-middle">Buy something!</h2>
    </div>
}
else
{
    foreach (var order in Model)
    {
        <div class="container">
            <div class="card border-danger">
                <button class="btn btn-danger" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-@order.TicketId"
                        data-target="#collapse-@order.TicketId">
                    Order from @Html.DisplayFor(model => order.PurchaseDate)</button>
                <div class="collapse" id="collapse-@order.TicketId">
                Kek
                    </div>
            </div>
        </div> 
    }
}