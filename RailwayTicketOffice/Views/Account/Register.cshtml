@{
    ViewData["Title"] = "Registration";
}

@model UserRegisterModel

@using (@Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new {@class = "form-control", @type="email"})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PasswordConfirmation)
        @Html.PasswordFor(model => model.PasswordConfirmation, new {@class = "form-control"})
    </div>
    <input type="submit" class="form-control btn btn-primary" value="Register">
}